<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.LogFoodController"
      styleClass="log-food-view"
      spacing="15">
      
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>
    
    <Label text="Log New Food Item" styleClass="view-title"/>
    
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="100" prefWidth="150" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="200" />
        </columnConstraints>
        
        <!-- Item Name -->
        <Label text="Item Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nameField" promptText="e.g. Apples" 
                   GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <!-- Quantity -->
        <Label text="Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <TextField fx:id="quantityField" promptText="e.g. 2.5" prefWidth="100" />
            <TextField fx:id="unitField" promptText="e.g. kg, liters, pieces" prefWidth="150" />
        </HBox>
        
        <!-- Category -->
        <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <ComboBox fx:id="categoryComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"
                  prefWidth="200" />
        
        <!-- Expiry Date -->
        <Label text="Expires in:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <TextField fx:id="daysField" promptText="Days from now" prefWidth="100" />
            <Label text="days" />
        </HBox>
        
        <!-- Description (Optional) -->
        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextArea fx:id="descriptionArea" promptText="Optional details about the food item"
                 GridPane.columnIndex="1" GridPane.rowIndex="4" prefHeight="80" />
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="resetButton" text="Reset" onAction="#handleReset" />
        <Button fx:id="saveButton" text="Save" onAction="#handleSave" styleClass="primary-button" />
    </HBox>
    
    <VBox fx:id="successPane" visible="false" styleClass="success-pane" spacing="10">
        <Label text="Food Item Added Successfully!" styleClass="success-title" />
        <Label fx:id="itemInfoLabel" text="" />
        
        <VBox fx:id="recommendationPane" spacing="5">
            <Label text="Recommended Service:" styleClass="recommendation-title" />
            <Label fx:id="serviceNameLabel" text="" />
            <Label fx:id="serviceInfoLabel" text="" />
            <Button fx:id="scheduleButton" text="Schedule Pickup/Drop-off" 
                   onAction="#handleSchedule" styleClass="action-button" />
        </VBox>
    </VBox>
</VBox>